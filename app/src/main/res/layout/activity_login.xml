<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    android:gravity="center">


    <!--线性布局 登录框-->
    <LinearLayout
        android:id="@+id/login_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >
        <!--SignIn大logo-->
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="约饭吧"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_text_logo"
            android:textSize="50sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            />

        <!--手机号输入框-->
        <!--username文本-->
        <TextView
            android:text="手机号:"
            android:textColor="#a6161616"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:id="@+id/login_text_account" />

        <!--输入框-->
        <EditText

            android:inputType="textPersonName"
            android:ems="10"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/msgcard"
            android:textSize="15sp"
            android:id="@+id/login_edit_account"
            android:selectAllOnFocus="true"
            />

        <!--输入框的下划线-->

        <!--密码输入框-->
        <!--Password文本-->
        <TextView
            android:text="密码"
            android:textColor="#a6161616"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:id="@+id/login_text_pwd" />

        <!--Password输入框-->
        <EditText
            android:inputType="textPassword"
            android:ems="10"

            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/msgcard"
            android:textSize="15sp"
            android:id="@+id/login_edit_pwd"
            android:selectAllOnFocus="true"
            android:singleLine="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="记住密码"
                android:textColor="#a6161616"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Login_Remember"
                />

            <TextView
                android:text="修改密码"
                android:textColor="#a6161616"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_text_change_pwd"
                android:background="#00ffffff"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>

        <!--取消按钮和登录按钮-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp">

            <!--取消按钮-->
            <Button
                android:text="重置"
                android:textStyle="bold"
                android:textColor="#a6161616"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/login_btn_clear"
                android:background="@drawable/msgcard"
                android:layout_weight="1"
                />

            <!--确定按钮-->
            <Button
                android:text="登录"
                android:layout_marginLeft="10dp"
                android:textColor="#a6161616"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/login_btn_login"
                android:background="@drawable/msgcard"
                android:layout_weight="1"

                />

        </LinearLayout>

        <!--忘记密码 超链接-->
        <Button
            android:text="没有账号？注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn_register"
            android:background="#00ffffff"
            android:layout_gravity="center"/>


    </LinearLayout>



    <RelativeLayout
        android:id="@+id/login_success_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:background="#ff3f3f3f"
        android:paddingBottom="10.0px"
        android:paddingTop="21.0px"
        android:visibility="gone" >

        <TextView
            android:text="登录成功！"
            android:id="@+id/login_success_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ff3f3f3f"
            android:textSize="20.0dip" />
    </RelativeLayout>

    <!--视图下方的注册text-->


</RelativeLayout>

