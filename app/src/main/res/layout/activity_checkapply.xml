<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#63000000"
        android:weightSum="1">
        <Button

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_back1"
            android:id="@+id/back_btn" />

        <TextView
            android:text="申请信息"
            android:gravity="center"
            android:layout_width="81dp"
            android:layout_height="50dp"

            android:textSize="23sp"
            android:textStyle="normal"
            android:id="@+id/text"
            android:layout_weight="1.04" />


        <Button
            android:text=""
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:textSize="20sp"
            android:id="@+id/join"
            />

    </LinearLayout>

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="393dp"
        android:layout_marginLeft="20dp"

        android:columnCount="3"
        android:rowCount="10">

        <TextView
            android:id="@+id/applyer_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:text="申请人："
            android:textColor="#da000000"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/applyer"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@drawable/underline"
                android:text="nickname"
                android:textColor="#f32578de"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/applyer_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/head_05" />


        </LinearLayout>

        <TextView
            android:id="@+id/canteen_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:text="餐厅："
            android:textColor="#da000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/canteen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:text="Canteen"
            android:textColor="#da000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:text="饭约时间："
            android:textColor="#da000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:text="time"
            android:textColor="#da000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/content_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_row="4"
            android:text="申请信息："
            android:textColor="#da000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:layout_row="4"
            android:text="content"
            android:textColor="#da000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_row="5"
            android:text="申请状态："
            android:textColor="#da000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:layout_row="5"
            android:text="status"
            android:textColor="#da000000"
            android:textSize="23sp" />

        <Button
            android:id="@+id/orderinfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_row="6"
            android:background="@drawable/underline"
            android:text="查看饭约信息"
            android:textColor="#f32578de"
            android:textSize="20sp" />

    </GridLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/refuse_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/timebtn"
        android:text="拒绝"
        android:textColor="#da000000"
        android:textSize="23sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
 />
    <Button
        android:id="@+id/sure_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/timebtn"
        android:text="允许加入"
        android:textColor="#da000000"
        android:textSize="23sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
 />
</LinearLayout>

</LinearLayout>